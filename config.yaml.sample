# EPUB書籍の設定 (config.yaml)
book_settings:
  title: "私の縦書き小説（ルビ対応版）"
  author: "AI 次郎"
  language: "ja"
  input_directory: "docs"  # このディレクトリを作成し、txtファイルを入れてください
  output_file: "output.epub"
  css_file: "style.css" # (任意) CSSファイル名
  direction: "rtl"  # (任意) 書籍の方向（"ltr" または "rtl"）
  cover_image: "docs/cover.jpg"       # (任意) カバー画像ファイル名
